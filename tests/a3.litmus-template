C A3
{ [x] = 0; [y] = 0; }

P0 (volatile int* x, volatile int* y) {
  *y = 1;
  atomic_store_explicit(x, 1, memory_order_release);
}

P1 (volatile int* x, volatile int* y) {
  while (1 != atomic_load_explicit(x, MO_CHOICE(memory_order_acquire, memory_order_seq_cst))) {
    ACCESS_CHOICE(y,1,2);
  }
}
