{ [x] = 0; [y] = 0; }

P0 (volatile int* x, volatile int* y) {
  atomic_store_explicit(x, 1, MO_CHOICE(memory_order_release, memory_order_seq_cst));
  ACCESS_CHOICE(y,0,1);
}

P1 (volatile int* x, volatile int* y) {
  int r1 = atomic_load_explicit(x, memory_order_acquire);
  if (r1) {
    *y = 1;
  }
}

exists(x=1 /\ y=1)
