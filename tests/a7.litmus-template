{ [x] = 0; [y] = 0; }

P0 (volatile int* x, volatile int* y) {
  ACCESS_CHOICE(y,0,1);
  fence(memory_order_release);
  atomic_store_explicit(x, 1, memory_order_relaxed);
}

P1 (volatile int* x, volatile int* y) {
  int r = atomic_load_explicit(x, memory_order_acquire);
  if (r) {
    *y = 1;
  }
}
