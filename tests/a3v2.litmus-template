{ [x] = 0; [y] = 0; [zero] = 0; }

P0 (volatile int* x, volatile int* y) {
  *y = 1;
  atomic_store_explicit(x, 1, memory_order_release);
}

P1 (volatile int* x, volatile int* y) {
  int r0 = SCAS(x, zero, 1, MO_CHOICE(memory_order_acquire, memory_order_acq_rel, memory_order_seq_cst), memory_order_relaxed);
  if (r0) {
    ACCESS_CHOICE(y,1,2);
  }
}

exists(1:r0=1)
